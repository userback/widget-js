{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb",
    "airbnb/hooks"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 4],
    "react/jsx-filename-extension": ["off"],
    "max-len": ["warn", 140],
    "no-use-before-define": ["warn"],
    "no-unused-vars": ["warn"],
    "consistent-return": ["warn"],
    "camelcase": ["off"]
  },
  "root": true,
  "ignorePatterns": ["**/dist/*", "examples/*"]
}
