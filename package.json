{
  "name": "root",
  "description": "Root workspace for userback.io npm packages",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "widget-*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --no-private run build",
    "build:widget": "yarn workspace @userback.io/widget build",
    "build:react": "yarn workspace @userback.io/react build",
    "start:widget": "yarn workspace example-js start",
    "start:react": "yarn workspace example-react start",
    "test": "yarn workspace example-js build && yarn workspace example-react build",
    "publish": "yarn workspaces foreach --no-private run publish",
    "lint": "yarn eslint . --ext js,ts,jsx,tsx"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.2"
}
